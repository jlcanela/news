{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2015", "DOM"],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
      },
      "include": ["src"],
      "exclude": ["node_modules"]
  }
  